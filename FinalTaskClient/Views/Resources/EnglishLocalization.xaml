<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FinalTaskClient.Views.Resources">
    <Style x:Key="GreetingColumnStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="{Binding Greeting.Txt4}"/>
    </Style>
    <Style x:Key="CountryColumnStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="{Binding Country.Txt4}"/>
    </Style>
    <Style x:Key="GeneralTxtBStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="{Binding Txt4}"/>
    </Style>
</ResourceDictionary>